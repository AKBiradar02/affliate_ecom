rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products collection - public read, authenticated write
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      
      // Only authenticated users can create, update, or delete
      allow create, update, delete: if request.auth != null;
    }
    
    // Blogs collection - public read, authenticated write
    match /blogs/{blogId} {
      // Anyone can read blogs
      allow read: if true;
      
      // Only authenticated users can create, update, or delete
      allow create, update, delete: if request.auth != null;
    }
    
    // Click tracking collection (optional - if you move click tracking to Firestore)
    match /clicks/{clickId} {
      // Anyone can read and write clicks
      allow read, write: if true;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
